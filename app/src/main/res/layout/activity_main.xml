<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/iv_greenLogo"
        app:srcCompat="@drawable/logogreen"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_koachText"
            app:srcCompat="@drawable/koachlogogreen"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_greenLogo"/>

        <EditText
            android:layout_height="50dp"
            android:layout_width="345dp"
            android:background="@color/white"
            android:id="@+id/et_mainUName"
            android:hint="@string/username"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:layout_below="@+id/iv_koachText"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_height="50dp"
            android:layout_width="345dp"
            android:inputType="textPassword"
            android:id="@+id/et_mainPass"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_below="@+id/et_mainUName"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:hint="@string/password"
            android:layout_marginTop="25dp" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="25dp"
               android:id="@+id/btn_signIn"
               android:backgroundTint="@color/koachGreen"
               android:layout_below="@+id/et_mainPass"
               android:layout_centerHorizontal="true"
               android:text="@string/signIn" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btn_register"
               android:backgroundTint="@color/koachGreen"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/btn_signIn"
               android:background="@color/transparent"
               android:text="@string/register"
               android:textSize="10sp" />

</RelativeLayout>
