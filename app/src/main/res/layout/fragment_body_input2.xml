<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/koachGreen"
    tools:context=".bodyInputFragment2">

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_choose"
        android:text="@string/goalBType"
        android:layout_alignEnd="@+id/gl_grid1"
        android:gravity="end"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_above="@+id/gl_grid1"
        android:textColor="@color/background"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:id="@+id/gl_grid1"
        android:rowCount="2"
        android:columnCount="2">
        <ImageButton
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:backgroundTint="@color/koachBlue"

            android:id="@+id/btn_goal1"
            android:src="@drawable/loseweight"
            android:textSize="30dp"
            android:textColor="@color/koachGreen"
            android:layout_row="0"
            android:layout_column="0"/>
        <ImageButton
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:backgroundTint="@color/background"

            android:id="@+id/btn_goal2"
            android:src="@drawable/gainweight"
            android:textSize="30dp"
            android:textColor="@color/koachGreen"
            android:layout_row="0"
            android:layout_column="1"/>
        <ImageButton
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:backgroundTint="@color/background"
            android:id="@+id/btn_goal3"
            android:src="@drawable/maintain"
            android:textSize="30dp"
            android:paddingBottom="40dp"
            android:textColor="@color/koachGreen"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="210dp"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/btn_goal4"
            android:backgroundTint="@color/koachBlue"
            android:src="@drawable/arm"
            android:textColor="@color/koachGreen"
            android:textSize="30dp"
            android:layout_gravity="bottom"/>
    </GridLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_mainLogo"
        android:layout_below="@+id/gl_grid1"
        app:srcCompat="@drawable/logoblack"
        />

</RelativeLayout>